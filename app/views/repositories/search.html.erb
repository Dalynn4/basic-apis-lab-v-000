<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @results %>
  <% @results.each do |item| %>
         <%= item["name"] %>
         <%= item.["html_url"] %>
         <%= item.["description"] %>
      <% end %>
 <% end %>
</div>

